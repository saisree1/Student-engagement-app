     <form method="get" style="background-color:rgba(0,0,0,0.5);width:25%;margin-left:55%;padding-left:3%;margin-top:%">
 <div class="form-group" style="">
         <label for="Name" class="l1" >Name*:</label>
         <input type="text" class="form-control" name="name" value="<%=JSON.parse(JSON.stringify(res1[0].name))%>" pattern="[a-zA-Z]+$" title="Format:only letters">
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label for="Reg No" class="l1" >Reg No:</label>
         <input type="title" class="form-control" name="reg" value="<%=JSON.parse(JSON.stringify(res1[0]._id))%>"  pattern="^(BL\.EN\.U4)(CSE|ECE|EEE|MEC)[1-9][0-9]{4}$" title="Not editable" readonly="readonly"> 
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label for="date" class="l1" >Date Of Birth*:</label>
         <input type="date" class="form-control" name="date" 
         placeholder="<%=JSON.parse(JSON.stringify(res1[0].date))%>" min="1995-01-01" max="2010-12-31" required>
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label for="email" class="l1" >Email*:</label>
         <input type="email" class="form-control" name="email" value="<%=JSON.parse(JSON.stringify(res1[0].email))%>">
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label class="l1" > Password*:</label>
         <input type="password" class="form-control" name="pwd" pattern="^[A-Z][a-z]+[0-9]*$" title="Format:Start with capital and use atleast one small letter and any no.of digits" value="<%=JSON.parse(JSON.stringify(res1[0].password))%>">
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label for="Phone no" class="l1">Phone no*:</label>
         <input type="text" class="form-control" name="phno" pattern="[1-9][0-9]{9}$" value="<%=JSON.parse(JSON.stringify(res1[0].Phone))%>">
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label for="Courses" class="l1">Courses:</label>
         <input type="text" class="form-control" name="course[]" value="<%=JSON.parse(JSON.stringify(res1[0].courses))%>"  readonly="readonly">
        </div>
        <div class="form-group" style="margin-top:-10px">
        <label for="cou" class="l1" >Branch:</label><br>
        <input type="text" class="form-control" name="cou" value="<%=JSON.parse(JSON.stringify(res1[0].branch))%>" readonly="">
        </div>
        <div class="form-group" style="margin-top:-10px">
         <label for="Phone no" class="l1">ID Proof:</label>
         <input type="text" class="form-control" name="idprf" value="<%=JSON.parse(JSON.stringify(res1[0].file))%>" 
         readonly="readonly">
        </div>
